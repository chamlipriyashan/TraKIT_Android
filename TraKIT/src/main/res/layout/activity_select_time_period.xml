<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_time_period"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.workspike.trakit.SelectTimePeriodActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT start DATE"
        android:id="@+id/btn_start_date"
        android:layout_below="@+id/in_date_start"
        android:layout_marginTop="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/in_time_start"
        android:layout_toLeftOf="@+id/in_time_start" />


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="No Data Yet!!"
        android:id="@+id/positdetails"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/btntracklocation"
        android:layout_centerHorizontal="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT start TIME"
        android:id="@+id/btn_start_time"
        android:layout_alignBottom="@+id/btn_start_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/in_date_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="start date"
        android:textColor="#000"
        android:textSize="20dp"
        tools:context=".MainActivity"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_start_time"
        android:layout_alignRight="@+id/in_end_date"
        android:layout_alignEnd="@+id/in_end_date" />

    <TextView
        android:id="@+id/in_time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="start time"
        android:textColor="#000"
        android:textSize="20dp"
        tools:context=".MainActivity"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/in_date_start"
        android:layout_toEndOf="@+id/in_date_start"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/in_date_start" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Location !"
        android:id="@+id/btntracklocation"
        android:shadowColor="#4e6ead"
        android:background="#7a7a7a"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn_end_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT end TIME"
        android:id="@+id/btn_end_time"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btn_start_time"
        android:layout_alignEnd="@+id/btn_start_time" />

    <TextView
        tools:context=".MainActivity"
        android:id="@+id/in_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="End date"
        android:textColor="#000"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:layout_above="@+id/btn_end_time"
        android:layout_toLeftOf="@+id/btn_start_time"
        android:layout_toStartOf="@+id/btn_start_time"
        android:layout_marginBottom="17dp" />

    <TextView
        tools:context=".MainActivity"
        android:id="@+id/in_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="End Time"
        android:textColor="#000"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/in_end_date"
        android:layout_alignBottom="@+id/in_end_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btn_start_date"
        android:layout_toEndOf="@+id/btn_start_date" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT end DATE"
        android:id="@+id/btn_end_date"
        android:layout_alignBaseline="@+id/btn_end_time"
        android:layout_alignBottom="@+id/btn_end_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/in_end_time"
        android:layout_toStartOf="@+id/in_end_time" />


</RelativeLayout>
